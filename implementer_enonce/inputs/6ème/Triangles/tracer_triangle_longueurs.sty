  \path (A) -- (C) coordinate[midway] (ACmid);
  \node[left] at (ABmid) {$\affiche{\numAB}~\text{cm}$};
  \node[below] at (BCmid) {$\affiche{\numBC}~\text{cm}$};
  \node[right] at (ACmid) {$\affiche{\numCA}~\text{cm}$};
\end{tikzpicture}  



